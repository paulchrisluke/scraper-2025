# OpenAI API Key for content generation
OPENAI_API_KEY=your_openai_api_key_here

# API Keys for endpoints
RSS_API_KEY=your_secure_rss_api_key_here
SCRAPE_API_KEY=your_secure_scrape_api_key_here
GENERATE_API_KEY=generate-a-secure-key-here
CRON_SECRET=your_secure_cron_secret_here

# Vercel KV Configuration (Will be auto-populated by Vercel)
KV_URL=your_kv_url_here
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token_here

# Vercel Environment
VERCEL_ENV=development

# Next.js Environment
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SCRAPE_API_KEY=your_secure_scrape_api_key_here  # Same as SCRAPE_API_KEY

# Scraping Configuration
SCRAPE_INTERVAL=86400  # 24 hours in seconds
MAX_CONCURRENT_SCRAPES=3
RETRY_ATTEMPTS=3

# Content Generation
MAX_STORED_SUGGESTIONS=30
CONTENT_GENERATION_SCHEDULE="0 0 * * *"  # Run at midnight every day

# API Configuration
API_BASE_URL=http://localhost:3000
PRODUCTION_URL=https://your-production-url.vercel.app 